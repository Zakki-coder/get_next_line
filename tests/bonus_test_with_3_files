#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include "libft.h"
#include "get_next_line.h"
#include <stdio.h>

int main(int argc, char **argv)
{	
	int fd1;
	int fd2;
	int fd3;
	char *line;

	if(argc != 4)
	{
		printf("Error, give 3 args\n");
		return (-1);
	}
	fd1 = open(argv[1], O_RDONLY);		
	fd2 = open(argv[2], O_RDONLY);		
	fd3 = open(argv[3], O_RDONLY);		

	get_next_line(fd1, &line);
	printf("%s\n", line);
	get_next_line(fd2, &line);
	printf("%s\n", line);
	get_next_line(fd3, &line);
	printf("%s\n", line);
	get_next_line(fd1, &line);
	printf("%s\n", line);
	get_next_line(fd2, &line);
	printf("%s\n", line);
	get_next_line(fd3, &line);
	printf("%s\n", line);
	get_next_line(fd1, &line);
	printf("%s\n", line);
	get_next_line(fd2, &line);
	printf("%s\n", line);
	get_next_line(fd3, &line);
	printf("%s\n", line);
	get_next_line(fd1, &line);
	printf("%s\n", line);
	get_next_line(fd2, &line);
	printf("%s\n", line);
	get_next_line(fd3, &line);
	printf("%s\n", line);
	return (0);
}	
